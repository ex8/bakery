{
  "compilerOptions": {
    "outDir": "./lib",
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES2017",
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "lib": [
      "ES5",
      "ES6",
      "DOM"
    ],
    "jsx": "react",
    "allowJs": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src"
  ],
  "files": [
    "src/custom.d.ts"
  ]
}